<link href="/css/header.css" rel="stylesheet" />
<header id="header" class="header fixed-top d-flex align-items-center">
  <div class="d-flex justify-content-end">
    <a href="/" class="logo d-flex align-items-center text-decoration-none">
      <img src="/img/sociout.png" alt="SOCIOUT" />
      <span>SOCIOUT</span>
    </a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div>
  <!-- End Logo -->

  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">
      <li class="nav-item dropdown pe-3">
        <a
          class="nav-link nav-profile d-flex align-items-center pe-0"
          href="#"
          data-bs-toggle="dropdown"
        >
          <img
            src="<%= locals.user.avatar %>"
            alt="Profile"
            style="width: 30px"
            class="rounded-circle"
          />
          <span class="d-none d-md-block dropdown-toggle ps-2"
            ><%= locals.user.name %></span
          > </a
        ><!-- End Profile Iamge Icon -->

        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
          <li class="dropdown-header">
            <h6><%= locals.user.name %></h6>
            <span>Web Designer</span>
          </li>
          <li>
            <hr class="dropdown-divider" />
          </li>

          <li>
            <a
              class="dropdown-item d-flex align-items-center"
              href="/user/profile/<%= locals.user.id %>"
            >
              <i class="bi bi-person"></i>
              <span>My Profile</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider" />
          </li>

          <li>
            <a
              class="dropdown-item d-flex align-items-center"
              href="/user/profile/<%= locals.user.id %>"
            >
              <i class="bi bi-gear"></i>
              <span>Account Settings</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider" />
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" href="/user/faq">
              <i class="bi bi-question-circle"></i>
              <span>Need Help?</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider" />
          </li>

          <li>
            <a
              class="dropdown-item d-flex align-items-center"
              href="/user/sign-out"
            >
              <i class="bi bi-box-arrow-right"></i>
              <span>Sign Out</span>
            </a>
          </li>
        </ul>
        <!-- End Profile Dropdown Items -->
      </li>
      <!-- End Profile Nav -->

      <li class="nav-item">
        <i
          class="bi bi-chat-left-text toggle-chatbox-btn"
          data-toggle="tooltip"
          data-placement="bottom"
          title="Chats"
        ></i>
        <!-- <sup>3</sup> -->
        <!-- End Messages Icon -->
        <!-- End Messages Dropdown Items -->
      </li>
    </ul>
  </nav>
  <!-- End Icons Navigation -->
</header>
<Script> $(function () { $('[data-toggle="tooltip"]').tooltip() }) </Script>
